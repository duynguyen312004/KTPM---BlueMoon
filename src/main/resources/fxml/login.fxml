<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.condomanagement.controller.LoginController"
           styleClass="root-pane">

    <!-- MAIN UI -->
    <BorderPane>
        <center>
            <VBox alignment="CENTER" spacing="30" styleClass="login-card">
                <!-- Logo + Title -->
                <VBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="logoView"
                               fitWidth="120" fitHeight="120"
                               pickOnBounds="true"
                               preserveRatio="true"
                               styleClass="logo"/>
                    <Label text="BlueMoon - ĐĂNG NHẬP" styleClass="title-large"/>
                </VBox>

                <!-- Form -->
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" percentWidth="30"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="70"/>
                    </columnConstraints>

                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label-field"/>
                    <TextField fx:id="txtUsername" promptText="Nhập username"
                               GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-input-large"/>

                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label-field"/>
                    <PasswordField fx:id="txtPassword" promptText="Nhập mật khẩu"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-input-large"/>

                    <Button fx:id="btnLogin" text="ĐĂNG NHẬP"
                            onAction="#onLogin"
                            GridPane.rowIndex="2" GridPane.columnIndex="1"
                            maxWidth="Infinity"
                            styleClass="primary-button-large"/>
                </GridPane>

                <!-- Footer -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Bạn chưa có tài khoản?" styleClass="label-footer"/>
                    <Hyperlink text="Đăng ký" onAction="#onRegister" styleClass="link-footer"/>
                </HBox>
            </VBox>
        </center>
    </BorderPane>

    <!-- LOADING OVERLAY -->
    <VBox fx:id="loadingOverlay" visible="false" alignment="CENTER" styleClass="loading-overlay">
        <ProgressIndicator fx:id="loader" maxWidth="60" maxHeight="60"/>
        <Label text="Đang đăng nhập..." styleClass="loading-text"/>
    </VBox>
</StackPane>
