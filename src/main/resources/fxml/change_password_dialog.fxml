<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.condomanagement.controller.ChangePasswordDialogController"
            styleClass="dialog-pane">

    <content>
        <VBox spacing="15" styleClass="dialog-content">
            <Label text="Đổi mật khẩu tài khoản" styleClass="title-large"/>

            <TextField fx:id="txtUsername" promptText="Tên tài khoản" disable="true"/>
            <PasswordField fx:id="txtNewPassword" promptText="Mật khẩu mới"/>
            <PasswordField fx:id="txtConfirmPassword" promptText="Xác nhận mật khẩu"/>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:id="okButton" text="Xác nhận" buttonData="OK_DONE"/>
        <ButtonType text="Hủy" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>